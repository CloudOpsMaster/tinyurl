server {
    listen 80;
    location /images {
        root /var/www/html;
        autoindex on;
    }

    location ~* \.(jpg|jpeg|png|gif|ico|css|js)$ {
        expires 1h;
        add_header Cache-Control "public";
    }

    gzip on;
    gzip_types text/plain application/xml text/css text/js;
    access_log /var/log/nginx/access.log;
}
